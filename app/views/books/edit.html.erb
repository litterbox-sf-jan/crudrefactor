<h1>Edit a new book</h1>

<% if @book.errors.any? %>
  <% @book.errors.full_messages.each do |error| %>
    <p class="text-danger">
      <%= error%>
    </p>
  <% end %>
<% end %>

<%= form_for @book do |f|%>
<p>
  <%= f.label :title %>
  <%= f.text_field :title, autofocus: true %>
</p>

<p>
  <%= f.button :submit%>
</p>
<% end %>


<%= link_to 'Delete book', book_path(@book), method: "Delete", data: {confirm: "Are you sure?"} %>